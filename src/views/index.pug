doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title Weather App
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    body
        main
            .container.mt-5
                h1.text-center Weather App
                form(method='post', action='/weather').mb-4
                    .form-group.text-center
                        input(type='hidden', name='latitude', id='latitude')
                        input(type='hidden', name='longitude', id='longitude')
                        button.btn.btn-primary(type='submit') My Location

            .container.mt-5
                .d-grid.gap-2.col-2.mx-auto
                    a.btn.btn-success.mb-3(href='/weather/Kyiv') Kyiv
                    a.btn.btn-success.mb-3(href='/weather/Lviv') Lviv
                    a.btn.btn-success.mb-3(href='/weather/Ternopil') Ternopil

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    script(type="text/javascript" src="/location.js")