doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title Weather App
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    body(data-bs-theme="dark")
        main.container
            h1.text-center Weather
            .row.justify-content-center
                .col-md-6.weather-container
                    .location.text-center.display-5= `${city}`
                    .temperature.text-center.display-4= `${temp} Â°C`
                    .pressure.text-center= `Pressure ${pressure} hPa`
                    .humidity.text-center= `Humidity ${humidity} %`
                    .description.text-center= `${description}`
                    .icon.text-center
                        img(src=`https://openweathermap.org/img/wn/${icon}@4x.png`, alt=description)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
